<h1>Animals list</h1>
<div class="container">
    <table class="table table-hover">
    <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>type</th>
            <th>user ID</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#if animals.length}}
        {{#each animals}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{type}}</td>
            <td>{{userId}}</td>
            <td>
                <a href="/about_animal/{{id}}">Batafsil</a>
                <a href="/update_animal/{{id}}"><i class="fa fa-edit text-primary mr-3"></i></a>
                <a href="/animal/{{id}}"><i class="fa fa-trash text-danger"></i></a>
            </td>
        </tr>
        {{/each}}
        {{else}}
        <h1>No Animals</h1>
        {{/if}}

    </tbody>
</table>
</div>