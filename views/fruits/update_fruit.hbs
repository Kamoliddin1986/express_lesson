<h1 class="text-center">Update fruit</h1>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <form action="/update_fruit_by_id" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" name="name" value="{{fruit.name}}">
            </div>
            <div class="form-group">
                <label for="color">Color:</label>
                <input type="text" class="form-control" name="color" value="{{fruit.color}}">
            </div>

                <input type="hidden" class="form-control" name="id" value="{{fruit.id}}">

            <button type="submit" class="btn btn-primary">Update fruit</button>
        </form> 
        </div>
        <div class="col-2">

        </div>
    </div>