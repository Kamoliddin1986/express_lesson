<h1>Users list</h1>
<div class="container">
    <table class="table table-hover">
    <thead>
        <tr>
            <th>id</th>
            <th>username</th>
            <th>email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {{#if users.length}}
        {{#each users}}
        <tr>
            <td>{{id}}</td>
            <td>{{username}}</td>
            <td>{{email}}</td>
            <td>{{role}}</td>
            <td>
                <a href="/about_user/{{id}}">Batafsil</a>
                <a href="/update_user/{{id}}"><i class="fa fa-edit text-primary mr-3"></i></a>
                <a href="/user/{{id}}"><i class="fa fa-trash text-danger"></i></a>
            </td>
        </tr>
        {{/each}}
        {{else}}
        <h1>No Users</h1>
        {{/if}}

    </tbody>
</table>
</div>